@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1>Editar Contato</h1>
</div>  

<form>
  <div class="form-group">
    <label for="Nome">Nome</label>
    <input type="text" class="form-control" placeholder="Digite nome do contato">

  </div>
    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite E-mail do contato">

    </div>
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite numero do contato">

    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary ">Alterar</button>
        <a class="btn btn-secondary " asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>